<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "CutePets" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>  
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages'%>
              <%= yield %>
            </div>
          </div>
            <footer>  
            <a href=<%=root_path%>>top page</a>
            </footer>  
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->

</body>
</html>
